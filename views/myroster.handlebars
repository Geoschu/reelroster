<div class="bg-brightRed flex flex-col min-h-screen">
 
 <!-- Main Content -->
  <div class="flex-grow flex flex-col p-4">
    <div class="max-w-screen-lg mx-auto">
      <!-- User Profile and Movie List Card -->
      <div class="bg-white rounded-lg shadow-md p-6 relative">
        <div class="absolute top-0 left-0 h-12 w-12 flex items-center justify-center bg-gray-300 rounded-full p-3">
          <img src="../../public/images/drake.jpg" alt="User Profile" class="h-10 w-10 rounded-full" />
        </div>
        <h2 class="text-2xl font-semibold mb-4 text-center">My Roster</h2>
        <div id="movie-container" class="grid grid-cols-2 gap-6 mt-8">
          <!-- Movies will be dynamically inserted here -->

        </div>
      </div>
    </div>
  </div>
 
  <!-- Handlebars Template for Movie Cards -->
  <script id="movie-template" type="text/x-handlebars-template">
    <div class="bg-pink rounded-lg shadow-md p-6 flex space-x-4">
      <div class="flex-none w-40 rounded-lg overflow-hidden">
        <img src="{{poster}}" alt="Movie Poster" class="w-full h-full object-cover" />
      </div>
      <div class="flex-grow">
        <h2 class="text-xl font-semibold mb-4">{{title}} Title </h2>
        <p class="text-gray-600">{{description}} Description </p>
      </div>
    </div>
  </script>

  <!-- Handlebars.js Library -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.7.7/handlebars.min.js"></script>

  <!-- External JavaScript for Dummy Data -->
  <script src="./js/dummyData.js"></script>
</div>
