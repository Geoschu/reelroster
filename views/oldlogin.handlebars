<main class='bg-brightRed flex justify-center items-center h-4/5'>
  <div class='bg-white p-8 rounded-lg shadow-md w-96'>
    <h2 class='text-2xl font-bold mb-6 text-center'>Login to see your roster</h2>
    <form action='#'>
      <div class='mb-6'>
        <label
          for='email'
          class='block mb-2 text-sm font-medium text-gray-900'
        >Email</label>
        <input
          type='email'
          class='bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg block w-full p-2.5'
          placeholder='example@email.com'
          required
        />
      </div>
      <div class='mb-6'>
        <label
          for='password'
          class='block mb-2 text-sm font-medium text-gray-900'
        >Password</label>
        <input
          type='password'
          class='bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg block w-full p-2.5'
          placeholder='••••••••'
          required
        />
      </div>
      <button
        type='submit'
        class='text-white bg-brightRed focus:ring-2 ring-black font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center'
      >Login</button>
    </form>
    <div class='mt-6 text-center'>
      <p class='text-sm'>Don't have an account?
        <a href='#' class='text-gray-400 hover:text-gray-800'>Sign up</a></p>
    </div>
  </div>
</main>
<footer class='bg-darkGray p-4 fixed bottom-0 w-full'>
  <div class='max-w-screen-lg mx-auto box-border h-6'></div>
</footer>